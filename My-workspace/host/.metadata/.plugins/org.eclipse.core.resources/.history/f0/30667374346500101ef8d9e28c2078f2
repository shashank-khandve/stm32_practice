#include <stdio.h>
#include <stdint.h>

typedef struct {
	uint32_t Hour:5;
	uint32_t Minute:6;
	uint32_t Second:6;
}time_t;

void fun1(void){

	time_t t1;
	printf("Enter the first time in HH:MM:SS format: ");
	scanf("%u:%u:%u",&t1.Hour,&t1.Minute,&t1.Second);
	printf("%2d:%2d:%2d",t1.Hour,t1.Minute,t1.Second);

}


