#include <stdio.h>

int main (){
	char arr[6];
	char i;
	printf("Enter 6 characters of your choice: ");

	for (i=0;i<6;i++){
		scanf("%c",&arr[i]);
	}
	printf("ASCII CODES: ");
	for (i=0;i<6;i++){
		printf("%c=%d",arr[i],arr[i]);
	}
	for(;;);

}
