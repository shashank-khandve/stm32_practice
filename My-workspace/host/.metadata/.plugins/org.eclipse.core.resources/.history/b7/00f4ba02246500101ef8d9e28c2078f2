#include <stdio.h>
#include <stdint.h>

typedef struct{
	char name[10];
	uint8_t age;
	uint16_t total_marks;
}Student_t;

int main (void){

	uint8_t count;
	printf("Enter the total number of students: ");
	scanf("%d",&count);
	Student_t student[count];

	for(uint8_t i=0;i<count;i++){
		printf("Enter the name of student: ");
		scanf("%s",student[i].name);
		printf("Enter the age of %s : ",student[i].name);
		scanf("%d",student[i].age);
		printf("Enter the total marks of %s : ",student[i].name);
		scanf("%d",student[i].total_marks);

	}
}
